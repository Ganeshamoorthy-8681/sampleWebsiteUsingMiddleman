<% wrap_layout :layout do %>

<h1 class = "main__page__heading"> Blogs </h1>

<main class="blog__container">
  <aside class="blog__sidebar">
  <div class="blog__sidebar__recent">

     <h2>Recent Articles</h2>
      <ol>
        <% blog.articles[0...10].each do |article| %>
          <li class="blog__link" ><%= link_to article.title, article %></span></li>
        <% end %>
      </ol>
    <div>

    <div class="blog__tags__list">
      <h2>Tags</h2>
      <ol>
        <% blog.tags.each do |tag, articles| %>
          <li class="blog__link"><%= link_to "#{tag} (#{articles.size})", tag_path(tag) %></li>
        <% end %>
      </ol>
    </div>
    <div class="blog__year__list">
       <h2>By Year</h2>
      <ol>
        <% blog.articles.group_by {|a| a.date.year }.each do |year, articles| %>
          <li class="blog__link" ><%= link_to "#{year} (#{articles.size})", blog_year_path(year) %></li>
        <% end %>
      </ol>
    </div>
</aside>


<article class="blog__content">

  <%= yield %>

</article>
</main>

<%  end  %>
