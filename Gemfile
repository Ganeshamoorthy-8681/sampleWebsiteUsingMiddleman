# Windows does not come with time zone data
gem 'tzinfo-data', '~> 1.2023', '>= 1.2023.3' , platforms: [:mswin, :mingw, :jruby, :x64_mingw]

# For faster file watcher updates on Windows:
gem 'wdm', '~> 0.1.1', platforms: [:mswin, :mingw, :x64_mingw]
